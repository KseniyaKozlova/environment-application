<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="Environment">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
<!--        <jta-data-source>java:/DefaultDS</jta-data-source>-->
<!--        <mapping-file>ormap.xml</mapping-file>-->
<!--        <jar-file>MyApp.jar</jar-file>-->

        <class>by.itacademy.environment-application.entities.Company</class>
        <class>by.itacademy.environment-application.entities.User</class>
        <class>by.itacademy.environment-application.entities.Coupon</class>
        <class>by.itacademy.environment-application.entities.Tare</class>
<!--        <exclude-unlisted-classes>true</exclude-unlisted-classes>-->

        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="none"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/environment"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="postgres"/>
        </properties>

    </persistence-unit>
</persistence>